<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".ActivityPostTask">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jokerman"
        android:gravity="center"
        android:text="Create Task"
        android:textColor="#070707"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="377dp"
        android:layout_height="416dp"
        android:layout_marginTop="104dp"
        android:background="#070707"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/createdTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/jokerman"
        android:gravity="center"
        android:hint="Enter Title"
        android:textColor="#0D9111"
        android:textColorHint="#700D9111"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/createddescription"
        android:layout_width="352dp"
        android:layout_height="183dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="184dp"
        android:fontFamily="@font/jokerman"
        android:hint="Enter Description"
        android:textColor="#0D9111"
        android:textColorHint="#700D9111"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="151dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="388dp"
        android:fontFamily="@font/jokerman"
        android:gravity="center"
        android:text="Reward"
        android:textColor="#0D9111"
        android:textColorHint="#0D9111"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="151dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="452dp"
        android:fontFamily="@font/jokerman"
        android:gravity="center"
        android:text="Deadline"
        android:textColor="#0D9111"
        android:textColorHint="#0D9111"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/createddeadline"
        android:layout_width="159dp"
        android:layout_height="51dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="452dp"
        android:fontFamily="@font/jokerman"
        android:gravity="center"
        android:hint="Enter Deadline"
        android:textColor="#0D9111"
        android:textColorHint="#700D9111"
        android:textSize="20sp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/createdreward"
        android:layout_width="151dp"
        android:layout_height="49dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="388dp"
        android:fontFamily="@font/jokerman"
        android:gravity="center"
        android:hint="Enter reward"
        android:textColor="#0D9111"
        android:textColorHint="#700D9111"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="198dp"
        android:layout_height="52dp"
        android:layout_marginTop="536dp"
        android:fontFamily="@font/jokerman"
        android:gravity="center"
        android:text="Disclaimer"
        android:textColor="#F5F5F5"
        android:textColorHint="#700D9111"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="408dp"
        android:layout_height="93dp"
        android:layout_marginTop="588dp"
        android:fontFamily="@font/jokerman"
        android:gravity="center"
        android:text=" If your points fall below the reward u are willing to offer, the task will not be seen by others."
        android:textColor="#070707"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>