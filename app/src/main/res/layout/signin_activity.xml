<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".ActivitySignin">

    <TextView
        android:layout_width="318dp"
        android:layout_height="60dp"
        android:fontFamily="@font/jokerman"
        android:gravity="center"
        android:text="Merit Match"
        android:textColor="#040307"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

    <TextView
        android:layout_width="166dp"
        android:layout_height="74dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="284dp"
        android:fontFamily="@font/jokerman"
        android:gravity="center"
        android:text="Password"
        android:textColor="#040307"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="166dp"
        android:layout_height="74dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="416dp"
        android:fontFamily="@font/jokerman"
        android:gravity="center"
        android:text="Username"
        android:textColor="#040307"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/singin_username"
        android:layout_width="195dp"
        android:layout_height="73dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="412dp"
        android:fontFamily="@font/jokerman"
        android:hint="Enter here"
        android:maxLength="10"
        android:textColor="#040307"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="198dp"
        android:layout_height="80dp"
        android:layout_marginBottom="284dp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintStart_toStartOf="parent"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/singin_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/jokerman"
            android:hint="Enter here"
            android:maxLength="12"
            android:textColor="#040307"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="206dp"
            tools:layout_editor_absoluteY="245dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="209dp"
        android:layout_height="98dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/jokerman"
        android:gravity="center"
        android:text="New User? Sign up now!!"
        android:textColor="#040307"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="374dp"
        android:layout_height="93dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="516dp"
        android:fontFamily="@font/jokerman"
        android:gravity="center"
        android:text="A community where People can connect - NP"
        android:textColor="#040307"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/signup"
        android:layout_width="118dp"
        android:layout_height="95dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/jokerman"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="#040307"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/login"
        android:layout_width="118dp"
        android:layout_height="95dp"
        android:layout_marginBottom="156dp"
        android:fontFamily="@font/jokerman"
        android:gravity="center"
        android:text="Log in"
        android:textColor="#040307"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>